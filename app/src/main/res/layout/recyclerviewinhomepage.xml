<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="100dp"
    android:layout_height="100dp"
    android:id="@+id/relativeLayoutInHomePageDetil">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="99"
        android:layout_height="match_parent"
        android:id="@+id/lineForHome">
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerForPicture"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电维修"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:id="@+id/recyclerForIntroduce"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/lineForHomePageDetil"
        android:visibility="gone"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#dcdcdc"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>