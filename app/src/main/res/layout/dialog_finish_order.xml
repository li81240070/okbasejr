<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rush_btn">

    <LinearLayout
        android:id="@+id/finish_titleLL"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单完成"
            android:textColor="#333333"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:id="@+id/write"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_below="@id/finish_titleLL"/>

    <LinearLayout
        android:id="@+id/gutLL"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_below="@id/write">

        <TextView
            android:id="@+id/finish_orderGutTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的订单已完成"
            android:textColor="#333333"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/finish_order_sureBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rush_btn"
            android:text="确定"
            android:textColor="#333333"
            android:textSize="20sp"/>

    </LinearLayout>



</RelativeLayout>