<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.NewPwdActivity">

    <include layout="@layout/toolbar_view" />
    <!--标题栏-->
    <RelativeLayout
        android:background="#3399ff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/backButtonInMyPassword">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backbuttonInMyPassword"
                android:background="@mipmap/bluebuttonintitle"

                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <!--灰色细线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_writ"/>


    <LinearLayout
        android:id="@+id/intputOldPswLL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        <!--android:background="@drawable/shape_forget_psw_edit"-->
        <EditText
            android:id="@+id/inputOldPswET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_forget_not_psw_edit"
            android:hint="请输入旧密码"
            android:maxLength="12"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:password="true"
            android:textColorHint="#d3d3d3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputNewPswET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_forget_not_psw_edit"
            android:hint="请输入6-12位新密码"
            android:maxLength="12"
            android:paddingLeft="10dp"
            android:password="true"
            android:textColorHint="#d3d3d3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/inputTwoNewPswET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/shape_forget_not_psw_edit"
            android:hint="请再次输入新密码"
            android:maxLength="12"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:password="true"
            android:textColorHint="#d3d3d3" />

    </LinearLayout>

    <Button
        android:id="@+id/sureNewPswBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:background="@drawable/shape_forget_psw_btn"
        android:text="确定"
        android:textSize="18sp"
        android:textColor="@android:color/white" />

</LinearLayout>
