<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/frist_splach">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/bigPhotoIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_margin="40dp"
            android:text="       “真匠人”APP是一款O2O居家装修、维修上门服务产品，用户下载“真匠人”APP可实现一键式预约上门服务，现已开通：我家装修、装修监控、水维修、电维修、居家小修、居家安装、家电清洗、货车力工等服务项目。"/>


        <Button
            android:id="@+id/startUseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始使用"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/send_btn"/>

    </LinearLayout>



</RelativeLayout>